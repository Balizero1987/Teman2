{
  "dashboard": {
    "uid": "intelligence-center",
    "title": "Intelligence Center - Advanced Metrics",
    "tags": ["intelligence", "staging", "analytics"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Staging Queue Size",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "targets": [{
          "expr": "zantara_intel_staging_queue_size",
          "legendFormat": "{{intel_type}}",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 10, "color": "yellow" },
                { "value": 50, "color": "red" }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Bulk Operations Rate",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [{
          "expr": "rate(zantara_intel_bulk_operations_total[5m])",
          "legendFormat": "{{intel_type}} - {{operation}}",
          "refId": "A"
        }]
      },
      {
        "id": 3,
        "title": "User Actions Breakdown",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [{
          "expr": "sum(increase(zantara_intel_user_actions_total[1h])) by (action)",
          "legendFormat": "{{action}}",
          "refId": "A"
        }]
      }
    ],
    "time": { "from": "now-6h", "to": "now" },
    "timepicker": { "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"] }
  }
}
