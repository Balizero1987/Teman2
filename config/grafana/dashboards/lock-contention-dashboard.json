{
  "dashboard": {
    "title": "Lock Contention & Race Conditions",
    "tags": ["race-conditions", "locking", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Memory Lock Timeouts",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(zantara_memory_lock_timeout_total[5m])",
            "legendFormat": "{{user_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Timeouts/sec"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "last"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "10s",
          "handler": 1,
          "name": "Memory Lock Timeouts",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 2,
        "title": "Memory Lock Contention Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(zantara_memory_lock_contention_seconds_sum[5m]) / rate(zantara_memory_lock_contention_seconds_count[5m])",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Avg Wait Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Collection Lock Timeouts",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(zantara_collection_lock_timeout_total[5m])",
            "legendFormat": "{{collection_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Timeouts/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Cache-DB Consistency Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(zantara_cache_db_consistency_errors_total[5m])",
            "legendFormat": "{{session_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Lock Contention Distribution",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(zantara_memory_lock_contention_seconds_bucket[5m])",
            "format": "heatmap",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Top Users by Lock Timeouts",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "topk(10, sum by (user_id) (rate(zantara_memory_lock_timeout_total[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": false},
              "indexByName": {},
              "renameByName": {
                "user_id": "User ID",
                "Value": "Timeouts/sec"
              }
            }
          }
        ]
      },
      {
        "id": 7,
        "title": "Lock Operations Summary",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "sum(rate(zantara_memory_lock_timeout_total[5m]))",
            "refId": "A",
            "legendFormat": "Total Timeouts/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Avg Lock Wait Time",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "rate(zantara_memory_lock_contention_seconds_sum[5m]) / rate(zantara_memory_lock_contention_seconds_count[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.01},
                {"color": "orange", "value": 0.05},
                {"color": "red", "value": 0.1}
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}

